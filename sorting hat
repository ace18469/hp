#include <iostream>

using namespace std;

int main(){

  int gryffindor, hufflepuff, ravenclaw, slytherin = 0;
  int answer1, answer2, answer3, answer4, answer5;

  cout << "==================================\n";
  cout << "=      The Sorting Hat Quiz      =\n";
  cout << "==================================\n";

  cout << "Q1.) When I'm dead, I want people to remember me as: \n";
  cout << "1. Good\n";
  cout << "2. Great\n";
  cout << "3. Wise\n";
  cout << "4. Bold\n";

  cin >> answer1;

if (answer1 == 1) {

  hufflepuff++;
}

else if (answer1 == 2) {

  slytherin++;
}

else if (answer1 == 3) {

  ravenclaw++;
}

else if (answer1 == 4) {

  gryffindor++;
}

else {

  cout << "Invalid Entry\n";
}

cout << "Q2.) Dawn or Dusk?\n";
cout << "1. Dawn\n";
cout << "2. Dusk\n";

cin >> answer2;

if (answer2 == 1){

  gryffindor++;
  ravenclaw++;
}

else if (answer2 == 2){

  hufflepuff++;
  slytherin++;
}

else {

  cout << "Invalid Entry\n";
}

cout << "Q3.) What kind of instrument pleases your ear?\n";
cout << "1. Violin\n";
cout << "2. Trumpet\n";
cout << "3. Piano\n";
cout << "4. Drums\n";

cin >> answer3;

if (answer3 == 1){

  slytherin++;
}

else if (answer3 == 2) {

  hufflepuff++;
}

else if (answer3 == 3) {

  ravenclaw++;
}

else if (answer3 == 4) {

  gryffindor++;
}

else {

  cout << "Invalid Entry\n";
}

cout << "Q4.) Which road tempts you the most?\n";
cout << "1. A Wide, Sunny Grassy Lane\n";
cout << "2. A Narrow, Dark, Lantern-lit Alley\n";
cout << "3. A Twisting, Leaf-strewn Path through the Woods\n";
cout << "4. A Cobble Street Lined with Ancient Buildings\n";

cin >> answer4;

if (answer4 == 1) {

  hufflepuff++;
}

else if (answer4 == 2) {

  slytherin++;
}

else if (answer4 == 3){

  gryffindor++;
}

else if (answer4 == 4) {

  ravenclaw++;
}

else {

  cout << "Invalid Entry\n";
}

cout << "Q5.) What element do you relate to the most?\n";
cout << "1. Fire\n";
cout << "2. Air\n";
cout << "3. Earth\n";
cout << "4. Water\n";

cin >> answer5;

if (answer5 == 1){

  gryffindor++;
}

else if (answer5 == 2) {

  ravenclaw++;
}

else if (answer5 == 3) {

  hufflepuff++;
}

else if (answer5 == 4) {

  slytherin++;
}

else {

  cout << "Invalid entry\n";
}

int max = 0;
string house;
string founder;
string animal;

if (gryffindor > max) {

  max = gryffindor;
  house = "Your House: Gryffindor";
  founder = "Founded by: Godric Gryffindor";
  animal = "Animal: Lion";
}

if (hufflepuff > max) {

  max = hufflepuff;
  house = "Your House: Hufflepuff";
  founder = "Founded by: Helga Hufflepuff";
  animal = "Animal: Badger";

}

if (ravenclaw > max) {

  max = ravenclaw;
  house = "Your House: Ravenclaw";
  founder = "Founded by: Rowena Ravenclaw";
  animal = "Animal: Eagle";
}

if (slytherin > max) {

  max = slytherin;
  house = "Your House: Slytherin";
  founder = "Founded by: Salazar Slytherin";
  animal = "Animal: Snake";
}
cout << "======================================\n";
cout << "         The Results Are In!!!!       \n";
cout << "======================================\n";
cout << house << "!\n";
cout << founder << "\n";
cout << animal << "\n";


